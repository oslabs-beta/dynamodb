{
  "include": ["src/**/*", "types/**/*.d.ts"],

  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
