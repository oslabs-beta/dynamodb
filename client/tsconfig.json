{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // "strict": true,
    "jsx": "react",
    // "declaration": true,
    // "declarationMap": true,
    // "outDir": "./dist",
    // "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.", "types/*.d.ts"],
  "exclude": ["node_modules"]
}
